@model SmartFlow.Models.SavingsGoal

@{
    ViewData["Title"] = "Stwórz";
    ViewData["PageTitle"] = "Stwórz nowy cel oszczędnościowy";
}

<h2 class="text-white mb-4">@ViewData["PageTitle"]</h2>
<hr />
<div class="row justify-content-center">
    <div class="col-md-7">
        <div class="rounded-4 p-5" style="background-color: #1a222b;">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="GoalName" class="control-label"></label>
                    <input asp-for="GoalName" class="form-control" />
                    <span asp-validation-for="GoalName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="TargetAmount" class="control-label"></label>
                    <input asp-for="TargetAmount" class="form-control" />
                    <span asp-validation-for="TargetAmount" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="CurrentAmount" class="control-label"></label>
                    <input asp-for="CurrentAmount" class="form-control" />
                    <span asp-validation-for="CurrentAmount" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="TargetDate" class="control-label"></label>
                    <input asp-for="TargetDate" class="form-control" />
                    <span asp-validation-for="TargetDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Stwórz" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary ms-2">Powrót</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
