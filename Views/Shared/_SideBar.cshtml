<div class="d-flex flex-column text-white p-3" style="height: 100vh; width: 250px; background-color: #1e252b">
    <div class="align-items-center">
        <h2 class="text-center">Menu</h2>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link text-white text-center" asp-controller="Dashboard" asp-action="Index">Panel</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white text-center" asp-controller="Categories" asp-action="Index">Kategorie</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white text-center" asp-controller="Transactions" asp-action="Index">Transakcje</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white text-center" asp-controller="SavingsGoals" asp-action="Index">Cele oszczędnościowe</a>
            </li>
        </ul>
    </div>

    <!-- Informacja o zalogowanym użytkowniku -->
    @if (User.Identity.IsAuthenticated)
    {
        <div class="mt-auto">
            <small>Jesteś zalogowany jako:</small>
            <strong>@User.Identity.Name</strong>
        </div>
    }

    <!-- Stopka w sidebarze, dopasowana do szerokości sidebar -->
    <footer class="text-muted text-center mt-3">
        &copy; 2024 - SmartFlow - <a href="#">Privacy</a>
    </footer>
</div>
